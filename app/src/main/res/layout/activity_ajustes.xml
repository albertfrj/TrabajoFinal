<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="40dp"
        android:layout_marginTop="50dp">



        <!-- Título -->

        <!-- Opción: Modo oscuro -->
        <TextView
            android:id="@+id/tituloAjustes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:text="Ajustes"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/brightness"
                android:contentDescription="Modo oscuro"
                android:tint="#333333" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Modo oscuro"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_weight="1"
                android:layout_marginStart="16dp" />

            <Switch
                android:id="@+id/switchDarkMode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Opción: Notificaciones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/notifications"
                android:contentDescription="Notificaciones"
                android:tint="#333333" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Notificaciones"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_weight="1"
                android:layout_marginStart="16dp" />

            <Switch
                android:id="@+id/switchNotificaciones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- Opción: Idioma -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:elevation="2dp"
            android:padding="12dp"
            android:layout_marginBottom="12dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/idioma"
                android:contentDescription="Idioma"
                android:tint="#333333" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Idioma"
                android:textSize="16sp"
                android:textColor="#333333"
                android:layout_weight="1"
                android:layout_marginStart="16dp" />

            <TextView
                android:id="@+id/txtIdioma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Español"
                android:textSize="14sp"
                android:textColor="#777777" />
        </LinearLayout>

        <!-- Separador -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#DDDDDD"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Botón: Cerrar sesión -->
        <Button
            android:id="@+id/btnCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cerrar sesión"
            android:backgroundTint="#E53935"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="8dp" />

        <!-- Botón: Restablecer ajustes -->
        <Button
            android:id="@+id/btnResetAjustes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Restablecer ajustes"
            android:backgroundTint="#64B5F6"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</ScrollView>
